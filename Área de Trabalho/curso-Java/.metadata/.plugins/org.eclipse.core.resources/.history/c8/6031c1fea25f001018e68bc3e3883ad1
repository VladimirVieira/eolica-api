			<!-- Importar Chart.js -->
			<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

			<script th:inline="javascript">
			// Gráfico de linha para radiação solar e chuva diária
			const ctxRad = document.getElementById('graficoRadiacao').getContext('2d');
			const chartRad = new Chart(ctxRad, {
				type: 'line',
				data: {
					labels: [[${hist.data}]],
					datasets: [
						{
							label: 'Radiação Solar (MJ/m²)',
							borderColor: 'rgb(255, 165, 0)',
							data: [[${hist.fator1}]],
							fill: false,
							tension: 0.1
						},
						{
							label: 'Chuva (mm)',
							borderColor: 'rgb(0, 64, 128)',
							data: [[${hist.fator2}]],
							fill: false,
							tension: 0.1
						}
					]
				},
				options: {
					responsive: true,
					plugins: {
						legend: { position: 'right' }
					},
					scales: {
						x: { title: { display: true, text: 'Data' } },
						y: { title: { display: true, text: 'Valor' } }
					}
				}
			});

			// Gráfico de barras com média de chuva trimestral
			const ctxTri = document.getElementById('graficoTrimestres').getContext('2d');
			const graficoTrimestres = new Chart(ctxTri, {
				type: 'bar',
				data: {
					labels: ['1º Trimestre', '2º Trimestre', '3º Trimestre', '4º Trimestre'],
					datasets: [{
						label: 'Média de Chuva (mm)',
						data: [
							[[${hist.primeiroTrimestre}]],
							[[${hist.segundoTrimestre}]],
							[[${hist.terceiroTrimestre}]],
							[[${hist.quartoSemestre}]]
						],
						backgroundColor: 'rgba(0, 64, 128, 0.2)',
						borderWidth: 1,
						borderColor: 'rgba(0, 64, 128, 1)'
					}]
				},
				options: {
					responsive: true,
					plugins: {
						legend: { position: 'right' }
					},
					scales: {
						y: { beginAtZero: true }
					}
				}
			});
			</script>
